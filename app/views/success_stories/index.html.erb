    <% @success_stories.each do |success_story| %>
     <div class="row">
      <div class="small-3 columns">
          <div class = "frame-square">
            <div class = "crop">
              <img src=<%=success_story.photo_url%>>
            </div>
          </div>
      </div>
      <div class="small-9 columns"><br>
          <h4><%=success_story.title%></h4> <br>
          <%= truncate(success_story.description, :length => 300) %>
          <br><br>
           <%=link_to 'Read more..', success_story, data: {no_turbolink: true} %>
      </div>
    </div>

    <div class = "divider-index"></div>


    <% end %>


