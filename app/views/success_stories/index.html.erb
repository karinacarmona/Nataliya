<div class="fixed">
  <nav class="top-bar" data-topbar role="navigation">
   <ul class="title-area">
    <li class="name">
         <%= link_to "#{image_tag("logo copy.jpg", :class => "logo")}".html_safe, root_path, data: { no_turbolink: true }%>
    </li>

  </nav>


<dl class="sub-nav">
  <dd><%=link_to 'Contact', contact_path, data: { no_turbolink: true }%></dd>
