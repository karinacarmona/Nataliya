<div class="fixed">
  <nav class="top-bar" data-topbar role="navigation">
   <ul class="title-area">
    <li class="name">
         <%= link_to "#{image_tag("logo copy.png", :class => "logo")}".html_safe, root_path%>
    </li>

  </nav>


<dl class="sub-nav">
  <dd><%=link_to 'Contact', contact_path%></dd>
  <dd><%= link_to 'About', about_path%></dd>

  <dd><%= link_to 'Volunteer', new_volunteer_path%></dd>
  <dd class="active"><%=link_to 'Success Stories',success_stories_path%></dd>
</dl>
</div>

<p id="notice"><%= notice %></p>

<h1>Listing Success Stories</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @success_stories.each do |success_story| %>
      <tr>
        <td><img src=<%=success_story.photo_url%>></td>
        <td><%= success_story.title %></td>
        <td><%= success_story.description%></td>
        <td><%= link_to 'Show', success_story %></td>
        <td><%= link_to 'Edit', edit_success_story_path(success_story) %></td>
        <td><%= link_to 'Destroy', success_story, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

